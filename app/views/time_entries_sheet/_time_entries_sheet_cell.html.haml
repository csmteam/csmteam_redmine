- current_date = date + index.day
- if (hours["#{current_date}|#{issue.id}"] || 0)  > 0
  = link_to hours["#{current_date}|#{issue.id}"], issue_time_entries_url(issue, f: ["spent_on",""], op: {spent_on:"><"}, v: {spent_on: [current_date,current_date]})
- else
  = text_field_tag "time_entries[#{current_date}|#{issue.id}]",hours["#{current_date}|#{issue.id}"], class: "time-entry-input", placeholder: current_date.strftime("%d/%m")
